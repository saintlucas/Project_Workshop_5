{% extends 'base.html.twig' %}

{% block body %}
    <h1>Email list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Emailaddress</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for email in emails %}
                <tr>
                    <td><a href="{{ path('email_show', { 'id': email.id }) }}">{{ email.id }}</a></td>
                    <td>{{ email.emailAddress }}</td>
                    <td>{{ email.type }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('email_show', { 'id': email.id }) }}">show</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


{% endblock %}